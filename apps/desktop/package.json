{
  "name": "desktop",
  "private": true,
  "version": "0.1.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELECTRON -c blue,magenta \"cross-env VITE_DEV=1 pnpm -C ../web dev\" \"wait-on tcp:5173 && electron .\"",
    "build": "pnpm -C ../web build && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.fbla.codingprogramming",
    "productName": "FBLA App",
    "files": [
      "main.js",
      "preload.js",
      "db.js",
      "dist/**"
    ],
    "directories": {
      "output": "release"
    },
    "win": { "target": "nsis" }
  },
  "dependencies": {
    "better-sqlite3": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^32.0.0",
    "electron-builder": "^24.0.0",
    "wait-on": "^7.2.0"
  }
}
